<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@model Health.Site.Areas.Parameters.Models.ParametersViewModel

@{
    ViewBag.Title = "Var";
    
}

<h2>На этой форме надо перечислить варианты ответов на параметр "@Html.Encode(Model.NewParam.Name)"</h2>
@using(Html.BeginForm("Confirm", "Add", new {area = "Parameters"}))
{
    <table cellspacing="0">
    <tr>
    <th></th>
    <th>Variants</th>
    <th>Balls</th>
    </tr>
    @for (int i = 0; i < Model.display_for; i++)
    {
        <tr>
        <td>Variant # @Html.Encode(i + 1)</td>
       
        <td> @Html.ValidationMessageFor(x => x.VarForm.variants[i])
        @Html.TextBoxFor(x => x.VarForm.variants[i])</td>
        <td>
        @Html.ValidationMessageFor(x => x.VarForm.balls[i])
        @Html.TextBoxFor(x => x.VarForm.balls[i])</td>
        </tr>
    }
    </table>
    <input type="submit" value="Send" />
}
