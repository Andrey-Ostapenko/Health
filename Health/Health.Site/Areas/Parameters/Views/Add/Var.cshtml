<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@model Health.Site.Areas.Parameters.Models.Forms.VarFormModel

@{
    ViewBag.Title = "Var";
    
}

<h2>На этой форме надо перечислить варианты ответов на параметр "@Html.Encode(Model.Parameter.Name)"</h2>
@using(Html.BeginForm("AddVar", "Add", new {area = "Parameters"}))
{
    <table cellspacing="0">
    <tr>
    <th></th>
    <th>Variants</th>
    <th>Balls</th>
    </tr>
    @for (int i = 0; i < Model.Variants.Length; i++)
    {
        <tr>
        <td>Variant # @Html.Encode(i + 1)</td>
       
        <td> @Html.ValidationMessageFor(x => x.Variants[i].Value)
        @Html.TextBoxFor(x => x.Variants[i].Value)</td>
        <td>
        @Html.ValidationMessageFor(x => x.Variants[i].Ball)
        @Html.TextBoxFor(x => x.Variants[i].Ball)</td>
        </tr>
    }
    </table>
    <input type="submit" value="Send" />
}
