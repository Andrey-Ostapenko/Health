<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@model Health.Site.Areas.Parameters.Models.ParametersViewModel

@{
    ViewBag.Title = "Заполнение мета-данных";
}

<h2>Заполните мета-данными следующую форму</h2>
@using (Html.BeginForm("Var", "Add", new { area = "Parameters" }))
{
    <h4><p>@Html.LabelFor(x => x.NextAddForm.Age)</p>
    <p>@Html.ValidationMessageFor(x => x.NextAddForm.Age)</p>
    <p>@Html.TextBoxFor(x => x.NextAddForm.Age)</p></h4>
    
    <h4>
    <p>@Html.LabelFor(x => x.NextAddForm.Obligation)
    @Html.CheckBoxFor(x => x.NextAddForm.Obligation)</p>
    </h4>
    
    <h4><p>@Html.LabelFor(x => x.NextAddForm.NumVariant)</p>
    <p>@Html.ValidationMessageFor(x => x.NextAddForm.NumVariant)</p>
    @{
    var httmlAtributes = new Dictionary<string, object>();
    if (!Model.NewParam.MetaData.Is_var)
    {
        httmlAtributes.Add("disabled", "disabled");
        httmlAtributes.Add("value", "null");
    }
    var htmlAttributesForParent = new Dictionary<string, object>();
    if(!Model.StartAddForm.Is_param)
    {
        htmlAttributesForParent.Add("disabled", "disabled");
        htmlAttributesForParent.Add("value", "null");
    }
}
    <p>@Html.TextBoxFor(x => x.NextAddForm.NumVariant, httmlAtributes)</p></h4>
    
    
    <h4><p>@Html.LabelFor(x => x.NextAddForm.Parents)</p>
    <p>@Html.TextBoxFor(x => x.NextAddForm.Parents, htmlAttributesForParent)</p>
    </h4>
    <input type="submit" value="Отправить" />
}
