@using Health.Site.Areas.Account.Models
@model LoginForm

@{
    ViewBag.Title = "Login";
}

<h2>@Html.LabelForModel()</h2>

@using (Html.BeginForm("LoginSubmit", "Authorization", new {area = "Account"}))
{
    <p>@Html.LabelFor(m => m.Login)</p>
    <p>@Html.TextBoxFor(m => m.Login) @Html.ValidationMessageFor(m => m.Login)</p>
    <p>@Html.LabelFor(m => m.Password)</p>
    <p>@Html.PasswordFor(m => m.Password) @Html.ValidationMessageFor(m => m.Password)</p>
    <p>@Html.LabelFor(m => m.RememberMe) @Html.CheckBoxFor(m => m.RememberMe) @Html.AntiForgeryToken()</p>
    <input type="submit" value="Send" />
}