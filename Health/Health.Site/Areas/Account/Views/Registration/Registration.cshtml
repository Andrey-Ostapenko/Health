@using Health.Site.Areas.Account.Models
@model AccountViewModel

@{
    ViewBag.Title = "Заявка на регистрацию";
}

<!DOCTYPE html>

<html>
    <head>
        <title>Index</title>
    </head>
    <body>
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>
    
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>Заявка на регистрацию</legend>
    
                <div class="editor-label">
                    @Html.LabelFor(model => model.RegistrationForm.FirstName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.RegistrationForm.FirstName)
                    @Html.ValidationMessageFor(model => model.RegistrationForm.FirstName)
                </div>
    
                <div class="editor-label">
                    @Html.LabelFor(model => model.RegistrationForm.LastName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.RegistrationForm.LastName)
                    @Html.ValidationMessageFor(model => model.RegistrationForm.LastName)
                </div>
    
                <div class="editor-label">
                    @Html.LabelFor(model => model.RegistrationForm.ThirdName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.RegistrationForm.ThirdName)
                    @Html.ValidationMessageFor(model => model.RegistrationForm.ThirdName)
                </div>
    
                <div class="editor-label">
                    @Html.LabelFor(model => model.RegistrationForm.Login)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.RegistrationForm.Login)
                    @Html.ValidationMessageFor(model => model.RegistrationForm.Login)
                </div>
    
                <div class="editor-label">
                    @Html.LabelFor(model => model.RegistrationForm.Password)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.RegistrationForm.Password)
                    @Html.ValidationMessageFor(model => model.RegistrationForm.Password)
                </div>
    
                <div class="editor-label">
                    @Html.LabelFor(model => model.RegistrationForm.Birthday)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.RegistrationForm.Birthday)
                    @Html.ValidationMessageFor(model => model.RegistrationForm.Birthday)
                </div>
                
                <div class="editor-label">
                    @Html.LabelFor(model => model.RegistrationForm.Policy)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.RegistrationForm.Policy)
                    @Html.ValidationMessageFor(model => model.RegistrationForm.Policy)
                </div>
    
                <div class="editor-label">
                    @Html.LabelFor(model => model.RegistrationForm.Card)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.RegistrationForm.Card)
                    @Html.ValidationMessageFor(model => model.RegistrationForm.Card)
                </div>
                @Html.AntiForgeryToken()
                <p>
                    <input type="submit" value="Register" />
                </p>
            </fieldset>
        }
    </body>
</html>